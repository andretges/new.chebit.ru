= title "CHEBIT - #{@conference.title}"
.row.row-conference
  .conference-menu-block Все выступления
  .row-fluid
    - @conference.presentations.ordered.each do |present|
      .span6.span-block
        .row-fluid
          .span3
            = image_tag present.image.url
          .span9.conf-view-block
            .conf-block-title
              = link_to present.title, present
            .conf-block-date
              %i.fontello-icon-user.icon-size-16.v-align-top
              = present.author
            .conf-block-text
              = present.content.html_safe
            .conf-block-text
              - if present.video_embed.present?
                %i.fontello-icon-video.icon-size-16.v-align-top
              - if present.file.present?
                %i.fontello-icon-doc-text-inv.icon-size-16.v-align-top
                = present.file_name if present.file_name.present?
    - if @conference.photo_content.present?
      .span12
        = @conference.photo_content.html_safe
  = render :partial => 'layouts/disquss'

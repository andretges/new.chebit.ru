.row
  .span12
    .row-fluid.row-presentation
      .span1
        .row-fluid
          .gray-block-title
            - if @presentation.video_embed.present?
              %i.fontello-icon-video.icon-size-32.gray-icon
            - if @presentation.file.present? && !@presentation.video_embed.present?
              %i.fontello-icon-doc-text-inv.icon-size-32.gray-icon
      .span7
        .row-fluid
          .gray-title
            = @presentation.title
      .span4
        .gray-block-autor
          %i.fontello-icon-user.icon-size-16.v-align-top
          = @presentation.autor
  .span12
    .row
      .span8
        .row
          .span8.conf-block-view
            .conf-block-text
              = @presentation.video_embed.html_safe if @presentation.video_embed.present?
        - if @presentation.file_name.present?
          .row
            .span8.conf-block-view
              .presentation-block-text
                Приложение:
              .presentation-block-text
                = link_to @presentation.file.url do
                  %i.fontello-icon-doc-text-inv.icon-size-16.v-align-top
                  = @presentation.file_name
      .span4.presentation-block-about
        .presentation-block-title
          = @presentation.title
        .presentation-block-text
          = @presentation.context.html_safe
        .presentation-block-text
          %br
          %br
          %br
          Поделиться:
        .blue-block
          %i.fontello-icon-twitter.icon-size-24
          %i.fontello-icon-facebook-rect.icon-size-24
          %i.fontello-icon-vkontakte.icon-size-24
= render :partial => 'layouts/disquss'
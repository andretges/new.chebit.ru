- present = presentation

.media
  .pull-left
    = link_to present do
      = image_tag present.image.thumb.url, :class => 'media-object', :size => '64x64'
  .media-body
    %h4.media-heading= link_to present.title, present
    .media-author
      %i.icon-user.icon-gray
      %small.muted= present.author
    %p= present.content.html_safe

    - if present.file.present?
      %p
        %i.fontello-icon-doc-text-inv.icon-size-16.v-align-top
        = link_to present.file_name, present.file.url


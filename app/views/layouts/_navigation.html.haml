      = link_to @conf do
        = @conf.title unless @conf.nil?
        %img{:src => '/assets/link_btn.jpg', :width => '50'}
    .span3
      = link_to @conf do
        %img{:src => '/assets/link_video.jpg'}
      .title-text
        = link_to '/', :class => 'title-text' do
          видео и презентации
          %br
          с выступлений >

!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "New.Chebit.Ru"
      %meta{:content => content_for?(:description) ? yield(:description) : "New.Chebit.Ru", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    #main{:role => "main"}
      = render 'layouts/conference'
      .container
        .content.body
          .row-fluid
            = render 'layouts/messages'
            = yield
      / ! end of .container
    / ! end of #main
    = render 'layouts/footer'